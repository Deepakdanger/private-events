<h1>Events  index  page</h1><br>

<% if user_signed_in?%>
<%= link_to "MY EVENTS", user_path(current_user.id) %><br>
<%= link_to "CREATE EVENT", new_event_path %><br><br>
  <%= link_to "SIGN OUT", destroy_user_session_path, :method => :delete %>
  <% else %> 
  <%= link_to "Sign in", user_session_path%>
<% end %> 


<h3>The Up-coming Events</h3>
<% if @events.future_event.length < 1%>
<p>No Up-coming Events </p>
<% else%>
<ul>
<% @events.future_event.each do |event| %>
    <li>
    <%= link_to event.event_name, event_path(event.id) %><br>
    </li>
<%end%>
</ul>
<%end%>

<h3>The Past Events</h3>
<% if @events.past_event.length < 1%>
<p>No Past Events </p>
<% else%>
<ul>
<% @events.past_event.each do |event| %>
    <li>
    <%= link_to event.event_name, event_path(event.id)%><br>
    </li>
<%end%>
</ul>
<%end%>

